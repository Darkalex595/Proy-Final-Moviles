<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bfbfbf"
    tools:context=".Notificaciones">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--Se debe cambiar el ID de cada evento para que no haya conflicto entre las cards-->

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardNotif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Imagen del evento -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Aqui se pone el titulo del evento en el primer TextView, en el segundo se pone el dia, la fecha y la hora, y en el tercero la informacion del evento -->
                        <!--Se le debe asignar tambien un id a cada TextView para que esta informacion sea usada para interactuar con el resto de la aplicacion-->
                        <TextView
                            android:id="@+id/inclusion_titulo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Evento de Inclusión para personas discapacitadas"
                            android:textAppearance="?attr/textAppearanceHeadline6" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Miércoles 30 de junio\n15:00 Horas"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="?android:attr/textColorSecondary" />

                        <TextView
                            android:id="@+id/inclusion_informacion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="Este evento tendra de invitado a Pedrito Perez, donde expondra como ayudar a empoderar a individuos con discapacidad en nuestros entornos."
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="?android:attr/textColorSecondary" />

                        <Button
                            android:id="@+id/notificacion_notif_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/switchNotifCancel" />

                    </LinearLayout>


                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardNotif2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/lgbt_titulo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Comunidad LGBTQ+"
                            android:textAppearance="?attr/textAppearanceHeadline6" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Sábado 3 de julio\n14:00 Horas"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="?android:attr/textColorSecondary" />

                        <TextView
                            android:id="@+id/lgbt_informacion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="En este evento se contará con la presencia de Juanito Domínguez, quien nos explicará cómo evitar utilizar lenguaje ofensivo hacia personas de la comunidad LGBTQ+, y cómo ser más inclusivos en nuestro entorno."
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="?android:attr/textColorSecondary" />

                        <Button
                            android:id="@+id/notificacion_notif_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/switchNotifCancel" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/noNotifs"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"
        android:text="@string/no_Notif"
        android:textAlignment="center" />


</FrameLayout>